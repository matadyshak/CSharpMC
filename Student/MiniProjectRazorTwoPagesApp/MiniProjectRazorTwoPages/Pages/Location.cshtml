@page
@model MiniProjectRazorTwoPages.Pages.LocationModel
@{
    ViewData["Title"] = "Address Entry"; 
}

<h1>Address Entry</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Address.AddressLine1"></label>
        <input type="text" asp-for="Address.AddressLine1" placeholder="Address Line 1" />
    </div>

    <div class="form-group">
        <label asp-for="Address.AddressLine2"></label>
        <input type="text" asp-for="Address.AddressLine2" placeholder="Address Line 2" />
    </div>

    <div class="form-group">
        <label asp-for="Address.City"></label>
        <input type="text" asp-for="Address.City" placeholder="City" />
    </div>

    <div class="form-group">
        <label asp-for="Address.State"></label>
        <input type="text" asp-for="Address.State" placeholder="State" />
    </div>

    <div class="form-group">
        <label asp-for="Address.Zipcode"></label>
        <input type="text" asp-for="Address.Zipcode" placeholder="Zipcode" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<h2>This is the address:</h2>
<h3>@Model.AddressAll</h3>