@page
@model MiniProjectRazorTwoPages.Pages.PeopleModel
@{
    ViewData["Title"] = "Name Entry"; 
}

<h1>Name Entry</h1>

<form method="post">
    <div class="form-group">
        <input type="text" asp-for="Person.FirstName" placeholder="First name" />
        <input type="text" asp-for="Person.LastName" placeholder="Last name" />
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

<h2>This is the greeting:</h2>
<h3>@Model.Greeting</h3>