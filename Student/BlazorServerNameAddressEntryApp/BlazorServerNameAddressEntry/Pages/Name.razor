@page "/Name"
<PageTitle>Name Entry</PageTitle>

<h3>Name Entry</h3>

<EditForm Model="thePerson"  OnValidSubmit="ValidSubmission"> 
    <label for="firstNameId" class="form-label">@nameof(thePerson.FirstName)</label>
    <InputText id="firstNameId" class="form-control" @bind-Value="thePerson.FirstName"></InputText>

    <label for="lastNameId" class="form-label">@nameof(thePerson.LastName)</label>
    <InputText id="lastNameId" class="form-control" @bind-Value="thePerson.LastName"></InputText>

    <button class="btn btn-primary" type="submit">Submit</button> 
</EditForm>

<ul>
    @foreach(PersonModel person in people)
    {
        string nameString = $"{person.FirstName} {person.LastName}";
        <li>
            @nameString;
        </li>
    }
</ul>

@code 
{
    private PersonModel thePerson = new();
    private List<PersonModel> people = new();

    private void ValidSubmission()
    {
        people.Add(thePerson);
        thePerson = new();
    }
}
