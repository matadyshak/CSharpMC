@page
@model HotelApp.Web.Pages.BookRoomModel
@{
    ViewData["Title"] = "Book Room";
}
<h1>Book Room</h1>

<!-- See Github Bootstrap for how to use form

1. mb-3 adds vertical spacing between form groups.

2. form-control ensures inputs are styled consistently.

3. p-3 adds padding around the form.

4. mt-2 adds spacing above the button.  -->

<form method="post" class="p-3">
    <div class="form-group mb-3">
        <label asp-for="@Model.FirstName" class="form-label"></label>
        <input type="text" asp-for="@Model.FirstName" class="form-control" />
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.LastName" class="form-label"></label>
        <input type="text" asp-for="@Model.LastName" class="form-control" />
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>

  <h2>Results</h2>
  @if (Model.RoomTypeModel != null)
  {
    <table class="table">
        <thead>
            <tr>
                <th>Room Type</th>
                <th>Start Date</th> 
                <th>End Date</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <tr> 
                <!--RoomType null until submit  --> 
                <td>@Model.RoomTypeModel.Title</td>
                <td>@Model.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@Model.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@string.Format("{0:C}", Model.RoomTypeModel.Price)</td>
            </tr>
        </tbody>
    </table>
  }
