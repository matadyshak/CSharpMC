@page
@model HotelApp.Web.Pages.RoomSearchModel
@{
    ViewData["Title"] = "Room Search";
}

 <form method="post">
    <div style="margin-bottom: 20px; display: flex; align-items: center; gap: 20px;">
        <div>
            <label for="startDate">Start Date:</label><br />
            <input type="date" id="startDate" name="StartDate" value="@Model.StartDate?.ToString("MM-dd-yyyy")" />
        </div>

        <div>
            <label for="endDate">End Date:</label><br />
            <input type="date" id="endDate" name="EndDate" value="@Model.EndDate?.ToString("MM-dd-yyyy")" />
        </div>

        <div style="margin-top: 22px;">
            <button type="submit" name="action" value="search">Search</button>
        </div>
    </div>

    @if (Model.RoomTypes?.Any() == true)
    {
        foreach (var item in Model.RoomTypes)
        {
            <div style="margin-bottom: 10px;">
                <span>@item.Title</span>
                <button type="submit" name="selectedText" value="@item.Title">Select</button>
            </div>
        }
    }
</form>